<!-- Loop over each object in the blogs array -->
{{#each blogs as |blog| }}
<div class="row m-auto pl-5 blog">
  <div class="col-md-12">
    <h2>
      <a href="/blog/{{blog.id}}">{{blog.title}}</a>
    </h2>
    <p>Created by {{blog.user.name}} on {{format_date blog.date_created}}</p>
  </div>
  <div class="col-md-12">
    <p>
      {{blog.content}}
    </p>
  </div>  
  <div>
    {{!-- <a href="/blog/{{blog.id}}/comment/">Comments on this Blog!</a> --}}
   {{> comment}}
  </div>
</div>
{{/each}}
